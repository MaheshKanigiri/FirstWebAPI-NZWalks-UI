@model FirstWebAPI_MVC_UI.DTO.RegionDto

<h1 class="mt-3">Edit Region</h1>

@if (Model != null)
{
    <div class="container">
        <div class="col-md-5">
        <form method="post" action="@Url.Action("Edit", "Regions")" class="mt-3">
            <div class="form-group">
                <label for="id">ID:</label>
                <input type="text" id="id" name="id" value="@Model.ID" class="form-control" readonly>
            </div>

            <div class="form-group">
                <label for="code">Code:</label>
                <input type="text" id="code" name="code" value="@Model.Code" class="form-control">
            </div>

            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="@Model.Name" class="form-control">
            </div>

            <div class="form-group">
                <label for="regionImageUrl">Region Image URL:</label>
                <input type="text" id="regionImageUrl" name="regionImageUrl" value="@Model.RegionImageUrl" class="form-control" >
            </div>

            <!-- Submit button for editing -->
            <button class="mt-2" type="submit" class="btn btn-primary">Save</button>
        </form>
        </div>
    </div>
}
else
{
    <p>No region found for editing.</p>
}
